<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>

<%= form_for @course do |f| %>
  Course:
  <%= f.text_field :name, placeholder: 'Course Name', required: true %>
  Hours:
  <%= f.number_field :hours, placeholder: 0, :step => 5, required: true %>
  <%= f.submit 'Add Course' %>
<% end %>