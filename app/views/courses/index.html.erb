<h1>Courses#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>

<nav>
  <%= link_to 'New Course', new_course_path %>
</nav>

<% @courses.each do |c| %>
  <div class="course" id="<%= c.id %>">
    <%= c.name %> <br>
    <%= c.hours %>
    <%= link_to 'Edit', edit_course_path(c) %>
    <%= link_to c.name, course_path(c) %>
    
  </div>
<% end %>