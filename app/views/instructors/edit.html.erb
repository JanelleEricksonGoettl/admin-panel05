<h1>Instructors#edit</h1>
<p>Find me in app/views/instructors/edit.html.erb</p>

  <div class="instructor">
    <%= form_for @instructor do |f| %>
      Instructor Name: <br>
      <%= f.text_field :first_name, placeholder: 'First Name', required: true %> <br>
      <%= f.text_field :last_name, placeholder: 'Last Name', required: true %> <br>
      Age: <br>
      <%= f.number_field :age, placeholder: 18, max: 150, required: true %> <br>
      Highest Education: <br>
      <%= f.select :education, options_for_select(["High School", "College", "Masters", "Ph.D"]), required: true%> <br>
      Salary: <br>
      <%= f.number_field :salary, min: 0, required: true %> <br>
      <%= f.hidden_field :cohort_id, value: @instructor.cohort.id %>
      <%= f.submit 'Edit Instructor' %>
    <% end %>
    <%= link_to 'Delete Instructor', instructor_delete_path(@instructor.id), method: :delete, data: {confirm: "WARNING: \n \n Are you sure you want to delete this instructor?", remote: true} %>
  </div>