<h1>Cohorts#edit</h1>
<p>Find me in app/views/cohorts/edit.html.erb</p>

<%= form_for @cohort do |f| %>
  Course:
  <%= f.text_field :name, placeholder: 'Cohort Name', required: true %>
  Start Date:
  <%= f.date_field :start_date, required: true %> <br>
  End Date:
  <%= f.date_field :end_date, required: true %> <br>
  <%= f.hidden_field :course_id, value: @cohort.course.id, required: true %>
  <%= f.submit 'Edit Cohort' %>
<% end %>